{
  "name": "mikroa",
  "version": "1.0.0",
  "description": "A CLI to create microservices projects",
  "main": "./src/index.ts",
  "bin": {
    "mikroa": "./src/index.ts"
  },
  "preferGlobal": true,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "src/",
    "spec/"
  ],
  "scripts": {
    "start": "npm run build && npm run global",
    "build": "npm run clean:some && tsc -p .",
    "test": "jasmine",
    "format": "prettier --write \"**/*.{js,json,md,ts,tsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ehan16/mikroa.git"
  },
  "keywords": [
    "cli",
    "microservices",
    "mikroa",
    "template"
  ],
  "author": "Erika Han & Reichel Larez",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/ehan16/mikroa/issues"
  },
  "homepage": "https://github.com/ehan16/mikroa#readme",
  "dependencies": {
    "ansi-regex": "^5.0.1",
    "ansi-styles": "^4.3.0",
    "chai": "^4.3.4",
    "clear": "^0.1.0",
    "cliui": "^7.0.4",
    "color-convert": "^2.0.1",
    "color-name": "^1.1.4",
    "emoji-regex": "^8.0.0",
    "escalade": "^3.1.1",
    "esm": "^3.2.25",
    "figlet": "^1.5.2",
    "fs-extra": "^10.0.0",
    "get-caller-file": "^2.0.5",
    "inquirer": "^8.1.5",
    "inversify": "^5.1.1",
    "is-fullwidth-code-point": "^3.0.0",
    "is-valid-path": "^0.1.1",
    "kleur": "^4.1.4",
    "ncp": "^2.0.0",
    "reflect-metadata": "^0.1.13",
    "require-directory": "^2.1.1",
    "sinon": "^11.1.2",
    "string-width": "^4.2.2",
    "strip-ansi": "^6.0.0",
    "tslib": "^2.3.1",
    "wrap-ansi": "^7.0.0",
    "y18n": "^5.0.8",
    "yargs": "^17.1.1",
