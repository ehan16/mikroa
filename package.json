    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "autoprefixer": "^10.3.4",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-avilatek": "^1.7.0",
    "eslint-config-avilatek-typescript": "^1.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "jasmine": "^3.9.0",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  }
